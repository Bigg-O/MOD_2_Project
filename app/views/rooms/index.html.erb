<h1>House View</h1>
<% @rooms.each do |room| %>
    <% if room.name != "Inventory" %>
    number of kids <%= room.num_of_kids if room.num_of_kids %>
        <p><%= link_to room.name, room %></p>
    <% end %>
<% end %>

<h1>Inventory</h1>
<p>
    <% if !Room.inventory.tools.empty? %>
        <%= Room.inventory.tools.first.name %>
    <% else %>
        <%= "Empty" %></p>
    <%end%>
</p>

<h1>Time</h1>
<p><%= (Time.now - @playTime).to_i %> seconds.</p>